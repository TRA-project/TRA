/* components/hotelCard/hotelCard.wxss */
.card {
  width: 720rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.left-col {
  display: block;
  z-index: 0;
}

.right-col {
  margin-left: 20rpx;
  display: block;
  width: 100%;
  z-index: 0;
}

.left-col image {
  border-radius: 20rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  width: 200rpx;
  height: 300rpx;
  display: inline-block;
  box-sizing: border-box;
}

.right-col .name {
  font-weight: 700;
  font-size: 32rpx;
}

.line2rd {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tags {
  padding: 0;
  display: flex;
}

.right-col .tag {
  background-color: #ECCC68;
  border-radius: 8rpx;
  /* display: inline-block; */
  padding: 5rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-top: 0;
}

.right-col .distance {
  margin-right: 10rpx;
  font-size: 30rpx;
  line-height: 30rpx;
}

.remark {
  color: #5352ED;
  font-size: 30rpx;
  font-weight: 600;
}

.comment {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #000000;
}

.info-line {
  display: flex;
}

.info-line .text {
  font-size: 26rpx;
  margin-left: 10rpx;
}

.facility {
  color: #2F3542;
}

.checkbox {
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  z-index: 100;
}