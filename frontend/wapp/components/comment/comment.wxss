/* 评论 */
/*模态框*/
.modals{
  position:fixed;
  z-index: 100000;
  left: 0; 
  right:0; 
  bottom: 0;
  }
 .modals-cancel{
  position:absolute; 
  z-index:1000; 
  top:0; 
  left: 0; 
  right:0; 
  bottom: 0; 
  /* background-color: rgba(0,0,0,.5); */
  }
 .bottom-dialog-body{
  width: 99%;
  margin: 0 auto;
  position:absolute; 
  z-index:10001; 
  bottom:0; 
  left:0; 
  right:0; 
  height:65%; 
  background-color: #fff;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  }
 /*动画前初始位置*/
 .bottom-pos{
  -webkit-transform:translateY(100%);
  transform:translateY(100%);
 }
 .comment_top{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
  padding: 10rpx 24rpx;
  box-sizing: border-box;
 }
 .comment_num{
  font-size: 30rpx;
 }
 .comment_close{
  font-size: 62rpx;
  line-height: 50rpx;
 }
 .comment_list{
  -webkit-overflow-scrolling: touch;
  flex: 1;
  overflow-y: scroll;
 }
 .comment_li{
  display: flex;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  flex-direction: column;
 }
.father_comment {
  display: flex;
  flex-direction: row;
}
 .comment_li_img{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 16rpx;
 }
 .comment_li_info{
  flex: 1;
 }
 .comment_li_name{
  font-size: 30rpx;
  font-weight: bold;
 }
 .comment_li_content{
  font-size: 28rpx;
  max-width: 80%;
  word-break:break-all;
 }
 .comment_li_date{
  color: #999;
  font-size: 24rpx;
 }
 .comment_inputbox{
   height: fit-content;
  display: flex;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #f2f2f2;
 }
 .comment_input{
    min-height:40rpx;
    line-height:30rpx;
    font-size: 30rpx;
    flex: 1;
 }

 .comment_sendbtn{
  font-size: 30rpx;
  background: rgb(80, 161, 236);
  color: #fff;
  padding: 5rpx 18rpx;
  border-radius: 10rpx;
 }

 .reply{
  display: flex;
  padding: 20rpx 24rpx;
  margin-left: 50rpx;
  margin-top: 10rpx;
  box-sizing: border-box;
  flex-direction: row;
  background-color: #fafafa;
 }
