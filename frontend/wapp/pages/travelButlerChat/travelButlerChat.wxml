<!-- 聊天界面 -->
<view class="chat-container">
  <!-- 聊天消息列表 -->
  <scroll-view class="chat-list" scroll-y="true" scroll-into-view="{{toView}}">
    <view wx:for="{{messages}}" wx:key="{{index}}">
      <text class="chat-item {{item.isMe ? 'me' : ''}}">{{item.content}}</text>
    </view>
  </scroll-view>
  <!-- 发送消息表单 -->
  <form class="chat-form" bindsubmit="sendMessage">
    <input type="text" name="content" placeholder="输入消息" bindinput="inputMessage" value="{{inputValue}}"/>
    <button type="submit">发送</button>
  </form>
</view>