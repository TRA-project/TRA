<view class="card">
  <view class="card-head">
    <view class="card-header">很高兴见到你！你想问些什么？</view>
    <image class="weather" bindtap="goWeather" src="../../images/weather.png"></image>
    <image class="arrow" bindtap="toggleCard" src="{{imageUrl}}"></image>
  </view>
  <view class="card-content" hidden="{{hidden}}" animation="{{animation}}">
    <view class="card-body">也许你想了解以下问题</view>
    <view class="card-query-wrapper">
      <view class="card-query" bindtap="query1">{{query1}}</view>
    </view>
    <view class="card-query-wrapper">
      <view class="card-query" bindtap="query2">{{query2}}</view>
    </view>
    <view class="card-query-wrapper">
      <view class="card-query" bindtap="query3">{{query3}}</view>
    </view>
  </view>
</view>

<view class = "scroll" style="height: {{height}}rpx;">
  <scroll-view class="chat-view" scroll-y="true" scroll-into-view="{{toView}}" scroll-with-animation="true" enable-back-to-top="true" style="margin-top: {{marginTop}}rpx; height: {{scrollHeight}}rpx"> 
    <block wx:for="{{chatContent}}" wx:key="{{item.id}}">
      <text class="{{item.sender}}" id="{{item.id}}">{{item.message}}</text>
    </block>
  </scroll-view>
</view>

<view class = "input-wrapper">
  <input class="input" type="text" name="input" placeholder="受api限制，请避免频繁请求" bindinput="onInput" model:value="{{inputValue}}" bindconfirm="sendMessage"/>
  <!-- <image class = "image" src = '../../images/audio_button.png'></image> -->
</view>

<!-- 添加一个蒙层，可以点击关掉弹窗 -->
<view class = "mask" hidden = "{{!showMask}}" catchtap = "toggleCard"></view>

<van-dialog id="operation-dialog" show="{{ showDialog }}" title="提示" message="受api限制，请避免在1分钟内频繁请求" show-confirm-button></van-dialog>
