page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.user{
  clear:both;
  font-size: 90%;
  float: right;
  background-color: #b2e281;
  margin: 0px 20px 10px 20px;
  padding: 10px 10px 10px 10px;
  border-radius:7px;
}

.ai{
  clear:both;
  font-size: 90%;
  float: left;
  background-color:rgb(204, 222, 255);
  /*float: left;*/
  margin: 10px 10px 10px 20px;
  padding: 10px 10px 10px 20px;
  border-radius:7px;
  text-indent: -12px;
}

.scroll{
  flex:1;
  overflow: scroll;
}

.input{
  border: 2px solid #ccc;
  border-radius: 10rpx;
  float: right;
  height: 40px;
  min-height: 30px;
  padding-left: 10rpx;
  font-size: 35rpx;
}