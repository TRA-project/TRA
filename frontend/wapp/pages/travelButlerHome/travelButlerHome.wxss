.card {
  width: 95%;
  height: 330rpx;
  background-color: rgb(245, 245, 245);
  border-radius: 18rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
}

.divider {
  width: 100%;
  height: 10rpx;
  background: #ebeffd;
}

.card .content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
}

.card .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card .description {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  border: 3rpx solid white;
  background-color: white;
  width: 200rpx;
  border-radius: 20rpx;
}

.logo {
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
}

.goChat{
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  color: #1e90ff;
}