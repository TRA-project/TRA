/* pages/sceneryMap/sceneryMap.wxss */
/* 部分样式摘自腾讯的开源地图模板*/
/* reference: https://github.com/TencentLBS/TencentMapMiniProgramDemo/blob/master/app.wxss */

.map {
  width: 100%;
  /* calc为计算属性，100vh表示整个屏幕的高度 */
  height: calc(100vh - 0px);
}

.feature-content {
  padding-right: 20px;
  padding-left: 10px;
  height: 56px;
  display: flex;
  justify-content: space-between;
  align-items: center;
	line-height: 56px;
}

.feature-label {
	padding-right: 10px;
  font-size: 14px;
	color: #222;
	white-space: nowrap;
}
.feature-txt {
	display:flex;
	flex: 1;
	align-items: center;
	line-height: 20px;
  font-size: 14px;
	color:rgba(34,34,34,0.5);
	word-break: break-all;
}

.feature-txt-item {
	position: relative;
	padding-left: 15px;
	margin-right: 15px;
}
.feature-txt-item:last-child {
	margin-right: 0;
}
.feature-txt-item::before {
	position: absolute;
	top: 50%;
	left: 0;
	margin-top: -5px;
  content: '';
  height:10px;
  width:1px;
  background: rgba(34,34,34,0.1);
}
.feature-txt-item:first-child::before {
	display: none;
}

.feature-content {
  padding-right: 20px;
}
.active {
	color: #222;
  font-weight: 900;
  font-size: 16px;
}
.feature-txt-left {
  padding-right: 15px;
}
.feature-txt-left:after {
  content: '';
  height:10px;
  width:5px;
  background: rgba(34,34,34,0.1);
}
.feature-txt-right {
  padding-left: 15px;
}