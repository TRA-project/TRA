/* pages/locs.wxss */
.top{
  height:100px;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
}
.top_pic{
  width: 100%;
}

.mask{
  position: absolute;
  height: 100px;
  top: 0;
  left: 0;
  width: 100%;
  background-color: rgb(7, 7, 7); 
  opacity: 0.2;
  z-index: 99;
}
.top text{
  color: white;
  width: 100%;
  position:absolute;
  bottom: 0;
  left: 0;
  z-index: 100;
  font-weight: bold;
  font-size: 150%;
}

.image_swiper {
  height: 550rpx;
}

.image_swiperitem {
  display: flex;
  justify-content: center;
}

.tr_title{
  width: 100%;
  height: 60rpx;
  font-size:45rpx;
  font-weight: bolder;
  display: flex;
  align-content: center;
  align-items: center;
  margin-left:15rpx;
}

.travel_content {
  width: 96%;
  margin-left: 2%;
  margin-top: 15rpx;
  text-align: justify;
  font-size: 13px;
  /* color: #555; */
  margin-bottom: 10px;
}

.travelRecords{
  display: flex;
  flex-direction: column;
  justify-items: flex-start;
  align-items: center;
  width: 100%;
  height: fit-content;
  margin-top: 20rpx;
}

.travelRecord{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  justify-items: center;
  align-content: left;
  align-items: left;
  /* border: 3rpx solid #44cdf0; */
  border-radius: 15rpx;
  height: 400rpx;
  width: 90%;
  background:white;
  margin-bottom:20rpx;
}

.trCoverPic{
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  height: 270rpx;
  width: 100%;
}

.trLocBox{
  display:flex;
  height: 40rpx;
  width: fit-content;
  align-items: center;
  align-content: left;
  background: rgb(255, 255, 255);
  border-bottom-right-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: relative;
  top:-175rpx;
  left:0rpx;
}

.trLocIcon{
  width: 30rpx;
}

.trLocText{
  height: 40rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  font-family:  ‘Segoe UI’, Tahoma, Geneva, Verdana, sans-serif;
}

.tr_title{
  width: 100%;
  height: 60rpx;
  font-size:45rpx;
  font-weight: bolder;
  display: flex;
  align-content: center;
  align-items: center;
  margin-left:15rpx;
}

.tr_protrait_nickname_like{
  width: 100%;
  height: 40rpx;
  display:flex;
  margin-left:5rpx;
  margin-top: 15rpx;
}

.tr_protrait{
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  width:9%;
  height: 0;
  position: relative;
  padding-top: 7%;
  margin-right: 3%;
  margin-left: 1%;
}

.tr_protrait_pic{
  height:100%;
  width: 100%;
  position: absolute;
  top:-12%;
  border-radius:100rpx;
}

.tr_nickname{
  display: flex;
  align-items: center;
  align-content: center;
  width:60%;
  height: 40rpx;
  font-size:30rpx;
  color:grey;
}

.tr_like{
  width:60%;
  height: 40rpx;
  display:flex;
  justify-content: flex-end;
  align-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.tr_like_pic{
 height: 40rpx;
 width:20%;
 position: relative;
}

.tr_text{
  display:flex;
  justify-content: flex-end;
  height: 40rpx;
  font-size:30rpx;
  color:grey;
  font-weight: normal;
  align-content: center;
  align-items: center;
}

.relative_view {
  width: calc(100% - 24px);
  height: auto;
  padding: 10px 12px;
  display: flex;
  flex-direction: column;
  background-color: rgb(245,245,245);
  /* margin-top: 20rpx; */
}

.divview {
  margin-top: 20rpx;
  width: 100%;
  height: 10rpx;
  background-color: rgb(248, 248, 248);
}

.relative_title {
  width: 98%;
  margin-left: 1%;
  text-align: center;
  font-weight: bold;
  font-size: 110%;
  color: #030303;
  margin-bottom: 15rpx;
}

.divline{
  width: 98%;
  border-bottom:solid 4rpx rgb(248, 248, 248);
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 1%;
}
