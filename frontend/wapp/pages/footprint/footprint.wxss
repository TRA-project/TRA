/* pages/footprint/footprint.wxss */
.map{
  width:100%;
  height: 100vh;
}
.box{
    display: flex;
    flex-direction: column;
    align-items: center;
    align-content: center;
    width: 100%;
    height: calc(30%);
    position: absolute;
    top: calc(70%);
    left: calc(50%rpx);
    opacity: 0.8;
    border-top-right-radius: 50rpx;
    border-top-left-radius: 50rpx;
    background:rgb(15, 27, 49);
    box-shadow: 0 0 5rpx 5rpx rgba(179, 179, 179, 0.925);

}

.usr_info{
  display:flex;
  justify-content: flex-start;
  align-content: center;
  align-items: center;
  width: 100%;
  height: 30%;
}

.usr_info_protrait{
  display:flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  height: 80rpx;
  width:80rpx;
  margin-left:40rpx;
  border: 5rpx solid rgb(245, 241, 28);
  border-radius:100rpx;
}

.usr_info_protrait_pic{
  height:75rpx;
  width:75rpx;
  border-radius:100rpx;
}

.usr_info_nickname{
  display:flex;
  align-content: center;
  align-items: center;
  height: 80rpx;
  width:fit-content;
  margin-left:30rpx;
}

.usr_info_nickname_text{
  width:fit-content;
  font-size:normal;
  font-family:  ‘Segoe UI’, Tahoma, Geneva, Verdana, sans-serif;
  font-weight: bold;
  color:white;
}

.get_more {
  margin-left: auto;
  margin-right: 5%;
  font-family:  ‘Segoe UI’, Tahoma, Geneva, Verdana, sans-serif;
  font-weight: bold;
  color:white;
}

.divline{
  width:90%;
  height: 1%;
  background:rgb(212, 212, 212);
}

.arrow{
  width:100%;
  height: 10rpx;
  display: flex;
  justify-content:space-between;
}

.arrow_pic_left{
  position: absolute;
  width:60rpx;
  height: 60rpx;
  left: 20rpx;
  top: 55%;
  z-index:2;
}

.arrow_pic_right{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 20rpx;
  top:55%;
  z-index:2;
}


