/* pages/sceneList/sceneList.wxss */

.search-container {
  height: 100rpx;
  background-color: rgba(30, 144, 255, 1.0);
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.search-box {
  height: 72rpx;
  background-color: white;
  border-radius: 36rpx;
  width: 100%;
  display: flex;
  justify-content: flex-start;  /* 内部元素横向从左向右排列 */
  align-items: center;      /* 内部元素纵向居中 */
  padding-left: 20rpx;
  padding-right: 10rpx;
}

.search-input {
  font-size: 30rpx;
  margin-left: 10rpx;
  width: 85%;
}
