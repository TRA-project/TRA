/* pages/sceneList/sceneList.wxss */
/* for Unification of CSS */
/* offset-x | offset-y | blur-radius | spread-radius | color */
.single-line {
  white-space: nowrap;
  /* 不换行 */
  overflow: hidden;
  /* 超出部分隐藏 */
  text-overflow: ellipsis;
  /* 溢出元素省略号表示 */
}
.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-bar-container {
  position: sticky;
  /* 吸顶效果 */
  top: 0rpx;
  z-index: 99;
}
.search-bar-container .search-bar {
  height: 100rpx;
  background-color: #1e90ff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.search-bar-container .search-bar .search-box {
  height: 72rpx;
  background-color: white;
  border-radius: 36rpx;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  /* 内部元素横向从左向右排列 */
  align-items: center;
  /* 内部元素纵向居中 */
  padding-left: 20rpx;
  padding-right: 10rpx;
}
.search-bar-container .search-bar .search-box .search-input {
  font-size: 30rpx;
  margin-left: 10rpx;
  width: 85%;
}
.top-bar-container {
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: space-between;
  background-color: rgba(145, 188, 235, 0.26);
  position: sticky;
  /* 吸顶效果 */
  top: 100rpx;
  z-index: 98;
}
.top-bar-container .drop-down-menu {
  width: 83%;
  margin: 10rpx;
}
.top-bar-container .add-scenery-button {
  width: 12%;
  display: flex;
  align-items: center;
  vertical-align: center;
  margin: 10rpx;
}
.top-bar-container .add-scenery-button .add-scenery-icon {
  width: 90rpx;
  height: 90rpx;
}
.scenery-list-container {
  min-height: 1000rpx;
  display: flex;
  flex-direction: column;
  /* van-card根节点样式 */
}
.scenery-list-container .scenery-list {
  border-radius: 10rpx;
}
.scenery-list-container .scenery-card {
  border-radius: 10rpx;
  margin: 5rpx;
  width: 100%;
}
.scenery-list-container .reselect-former-scene-card {
  background-color: #acd3ff !important;
  margin: 10rpx;
  filter: drop-shadow(4rpx 4rpx 3rpx #a0a0a0);
  border-radius: 30rpx;
  /* 吸顶 */
  position: sticky;
  top: 0;
}
.scenery-list-container .self-custom-class {
  border-bottom-style: solid;
  border-bottom-width: 3rpx;
  border-bottom-color: #b6b6b6;
}
.scenery-list-container .self-thumb-class {
  padding: 5rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  width: 180rpx;
  overflow: hidden;
}
.scenery-list-container .self-thumb-class .scene-card-image {
  height: 200rpx !important;
  width: 280rpx !important;
}
.scenery-list-container .self-title-class {
  font-size: 30rpx;
  font-weight: bolder;
  height: 30%;
}
.scenery-list-container .self-desc-class {
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  /* 行数 */
  -webkit-box-orient: vertical;
}
.scenery-list-container .self-price-class {
  padding-top: 10rpx;
}
.scenery-list-container .self-footer-class {
  /* margin-top: -60rpx; */
  position: absolute;
  right: 20rpx;
  bottom: 25rpx;
}
.scenery-list-container .scenery-list-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 600rpx;
}
.scenery-reselect-confirm-container {
  position: sticky;
  bottom: 80rpx;
  display: flex;
  justify-content: center;
}
.scenery-reselect-confirm-container .reselect-confirm-button {
  width: 40% !important;
  height: 80rpx !important;
  color: white;
  background-color: #1e90ff;
  border-radius: 30rpx !important;
  box-shadow: 5rpx 5rpx 10rpx 5rpx #494949;
  margin: 5rpx 20rpx !important;
}
.scenery-reselect-confirm-container .reselect-confirm-button-hover {
  box-shadow: 3rpx 3rpx 6rpx 3rpx #5e5e5e;
}
.scenery-reselect-confirm-container .return-back-button {
  width: 80rpx !important;
  height: 80rpx !important;
  background-color: #1e90ff;
  border-radius: 40rpx;
  box-shadow: 5rpx 5rpx 10rpx 5rpx #494949;
  margin: 5rpx 20rpx !important;
  padding: 5rpx !important;
  display: flex;
  justify-content: center;
}
.scenery-reselect-confirm-container .return-back-button .return-back-button-img {
  width: 40rpx;
  height: 40rpx;
  margin: 0rpx;
  padding: 0rpx;
  /* 完全反色(100%) */
  filter: invert(100%);
  align-self: center;
}
.scenery-reselect-confirm-container .return-back-button-hover {
  box-shadow: 3rpx 3rpx 6rpx 3rpx #5e5e5e;
}
