/* pages/sceneSearch/sceneSearch.wxss */

.search-box {
  position: sticky; /* 吸顶效果 */
  top: 0;
  z-index: 99;
}

.trash-icon {
  width: 34rpx;
  height: 34rpx;
}

.history-box {
  position: sticky;
  top: 50;
  z-index: 5;
  padding: 10rpx 20rpx; /* 上下 左右 */
}

.history-title {
  display: flex;
  justify-content: space-between; /* 两端贴边对齐 */
  align-items: center;
  height: 80rpx;
  font-weight: bolder;
}

.history-list {
  display: flex;
  flex-wrap: wrap;  /* 一行放不下，允许换行 */
}

.history-item {
  background-color: rgba(219, 219, 219, 0.705);
  border-radius: 20rpx;
  padding: 8rpx 12rpx;
  margin: 5rpx 10rpx;
}

.preference-box {
  padding: 10rpx 20rpx; /* 上下 左右 */
}

.preference-title {
  align-items: center;
  font-weight: bolder;
}