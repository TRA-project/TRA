        <view class="page-section-title">景点名称（必填项）</view>
            <view class="weui-cell__bd" style="margin: 30rpx 0">
              <input bindinput="spotnameInput" placeholder="请输入新增景点名称" />
            </view>
    </view>
    <view class = "divider"></view>
