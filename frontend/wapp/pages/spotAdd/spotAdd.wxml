    <!-- <view class = "divider"></view> -->
    <view class="page-section">
        <view class="page-section-title">景点地址（必填项）</view>
        <view class="weui-cell__bd" style="margin: 30rpx 0" >
            <input bindinput="spotaddrInput" class="weui-input" name="input" placeholder="请输入新增景点地址" />
        </view>
    </view>
    <view class = "divider"></view>
    <view class="page-section">
        <view class="page-section-title">景点描述</view>
        <view class="weui-cell__bd" style="margin: 30rpx 0" >
            <input bindinput="spotdescInput" class="weui-input" name="input" placeholder="请输入新增景点描述" />
        </view>
    </view>
    <view class = "divider"></view>
    <view class="page-section">
        <view class="page-section-title">景点开放时间</view>
        <view class="weui-cell__bd" style="margin: 30rpx 0" >
            <input bindinput="spotplaytimeInput" class="weui-input" name="input" placeholder="请输入新增景点开放时间" />
        </view>
    </view>
    <view class = "divider"></view>
    <view class="page-section">
        <view class="page-section-title">景点建议游览时间</view>
        <view class="weui-cell__bd" style="margin: 30rpx 0" >
            <input bindinput="spotaddrInput" class="weui-input" name="input" placeholder="请输入新增景点建议游览时间" />
        </view>
    </view>
    <view class = "divider"></view>
    <view class="page-section">
        <view class="page-section-title">票价/元</view>
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
            <input bindinput="spottickettypeInput" class="weui-input" name="input" placeholder="请输入新增景点门票类型" />
            <input bindinput="spotticketInput" class="weui-input" name="input" placeholder="请输入新增景点票价" />
            </view>
    </view>
    <view class = "divider"></view>
    <view class="page-section">
        <view class="page-section-title">景点类型</view>
        <view class="weui-cell__bd" style="margin: 30rpx 0" >
            <input bindinput="spottypeInput" class="weui-input" name="input" placeholder="请输入新增景点类型" />
        </view>
    </view>
