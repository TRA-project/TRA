/* pages/travelPlanPreview/travelPlanPreview.wxss */

.travel-plan-title-container {
  text-align: center;
  height: 80rpx;
  position: sticky; /* 吸顶 */
  top: 0;
  z-index: 99;
  background-color: white;
  
}

.travel-plan-title {
  font-size: 36rpx;
  font-weight: bolder;
}

.custom-argument-display-container {
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;  /* 调整文字垂直居中：行高为整个height */
  text-align: center;
  background-color: rgba(74, 134, 238, 0.151);
  box-shadow: 0rpx 0rpx 25rpx 5rpx rgba(113, 151, 233, 0.63) inset; 
}

.travel-plan-map-container {
  position: sticky; /* 吸顶 */
  top: 70rpx;
  z-index: 99;
  height: 100%;
}

.tencent-map {
  width: 100%;
  height: 750rpx;
}

.travel-plans-display-container {
  margin: 10rpx;
  border-radius: 20rpx;
  background-color: rgba(206, 229, 235, 0.918);
  min-height: 800rpx;

  position: sticky; /* 吸顶 */
  top: 500rpx;  /* 留出了上滑的空间 */
  z-index: 100;
}

.one-travel-plan-list {
  
}

.travel-route-item {
  border-bottom: 2rpx solid rgba(144, 154, 156, 0.788);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.travel-route-thumb {
  width: 25%;
  height: 140rpx;
  padding: 15rpx;
}

.travel-route-text {
  width: 65%;
  display: flex;  /* 开启flex布局 */
  flex-direction: column; /* 子元素垂直排列 */
  justify-content: space-between; /* 排布方式（空白方式） */
  padding-top: 10rpx;
  padding-bottom: 20rpx;
}

.travel-route-text-title {
  font-weight: bolder;
  font-size: 34rpx;
}

.trave-route-text-desc {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: rgba(87, 96, 111,1.0);
}

.trave-route-text-icon {
  margin-left: 10rpx;
  margin-right: 20rpx;
  color: rgba(116, 125, 140,1.0);
}

.travel-plan-footer-container {
  position: sticky; /* 吸顶 */
  bottom: 50rpx;  /* 留出了上滑的空间 */
  z-index: 101;
}

.travel-plan-submit-button {
  color: white !important;
  background-color: rgba(30, 144, 255,1.0) !important;
  border-radius: 40rpx !important;
  width: 300rpx !important;
  /* offset-x | offset-y | blur-radius | spread-radius | color */
  box-shadow: 10rpx 8rpx 15rpx 2rpx rgba(71, 71, 71, 0.637); 
}

.button-hover {
  box-shadow: 5rpx 4rpx 15rpx 1rpx rgba(71, 71, 71, 0.637), 
              2rpx 1rpx 10rpx 2rpx rgba(71, 71, 71, 0.637) inset; 
}